<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RapiRecetas" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/cardview_dark_background</item>
        <item name="colorPrimaryVariant">#FF6F22</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#FF5722</item>
        <item name="colorSecondaryVariant">#FF5722</item>
        <item name="colorOnSecondary">@color/cardview_dark_background</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.RapiRecetas.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.RapiRecetas.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="fontFamily">@font/rochester</item>

    </style>


    <style name="Theme.RapiRecetas.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>